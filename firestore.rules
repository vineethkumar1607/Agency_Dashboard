rules_version = '2'
service cloud.firestore {
  match /databases/{database}/documents {

    // Each authenticated user can read/write only their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId
    }

    // Optional: allow read access to public collections
    match /public/{document=**} {
      allow read: if true
    }
  }
}
